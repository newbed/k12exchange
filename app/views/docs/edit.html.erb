<!-- Validation failure messages -->

<% if @doc.errors.any? %>
  <% @doc.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Doc #<%= @doc.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_doc/<%= @doc.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for url -->
          <div class="form-group">
            <label for="url" class="col-sm-2 control-label">
              Url
            </label>
            <div class="col-sm-10">
              <input type="text" id="url" name="url" placeholder="Url" class="form-control" value="<%= @doc.url %>">
            </div>
          </div>

          <!-- Label and input for title -->
          <div class="form-group">
            <label for="title" class="col-sm-2 control-label">
              Title
            </label>
            <div class="col-sm-10">
              <input type="text" id="title" name="title" placeholder="Title" class="form-control" value="<%= @doc.title %>">
            </div>
          </div>

          <!-- Label and input for avg_rating -->
          <div class="form-group">
            <label for="avg_rating" class="col-sm-2 control-label">
              Avg rating
            </label>
            <div class="col-sm-10">
              <input type="text" id="avg_rating" name="avg_rating" placeholder="Avg rating" class="form-control" value="<%= @doc.avg_rating %>">
            </div>
          </div>

          <!-- Label and input for description -->
          <div class="form-group">
            <label for="description" class="col-sm-2 control-label">
              Description
            </label>
            <div class="col-sm-10">
              <textarea id="description" name="description" placeholder="Description" class="form-control" rows="3"><%= @doc.description %></textarea>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Doc
              </button>
              or
              <a href="/docs/<%= @doc.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
