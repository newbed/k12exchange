<!-- Validation failure messages -->

<% if @doc.errors.any? %>
<% @doc.errors.full_messages.each do |message| %>
<div class="alert alert-dismissable alert-danger">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <%= message %>
</div>
<% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Doc #<%= @doc.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_doc/<%= @doc.id %>" method="post" class="form-horizontal" enctype="multipart/form-data">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for url -->
          <div class="form-group">
            <label for="url" class="col-sm-2 control-label">
              Url
            </label>
            <div class="col-sm-10">
              <input type="file" id="url" name="url" placeholder="Url" class="form-control" value="<%= @doc.url %>">
         <!-- <input type="hidden" name="doc[url_cache">
              <%= image_tag(@doc.url) if @doc.url? %>
            -->
          </div>

        </div>

        <!-- Label and input for title -->
        <div class="form-group">
          <label for="title" class="col-sm-2 control-label">
            Title
          </label>
          <div class="col-sm-10">
            <input type="text" id="title" name="title" placeholder="Title" class="form-control" value="<%= @doc.title %>">
          </div>
        </div>

          <!-- Label and input for kind -->
          <div class="form-group">
            <label for="kind" class="col-sm-2 control-label">
              Kind
            </label>
            <div class="col-sm-10">
              <%= select_tag "kind",
              options_for_select([ "Select Kind", "Presentation", "Assessment", "Homework", "Class", "Activities" ], @doc.kind),
              { :class => 'form-control'} %>
            </div>
          </div>

        <!-- Label and input for description -->
        <div class="form-group">
          <label for="description" class="col-sm-2 control-label">
            Description
          </label>
          <div class="col-sm-10">
            <textarea id="description" name="description" placeholder="Description" class="form-control" rows="3"><%= @doc.description %></textarea>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button class="btn btn-warning">
              Update Doc
            </button>
            or
            <a href="/docs/<%= @doc.id %>">Cancel</a>
            <a href="/delete_doc/<%= @doc.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>

        </div>
      </form>
    </div>
  </div>
</div>
</div>


<!-- End responsive panel example -->
