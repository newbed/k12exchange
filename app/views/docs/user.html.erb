<!-- Responsive, Isotope-based layout example -->

<div class="row">
  <div class="col-xs-12">
    <input type="text" id="quicksearch" placeholder="Search Docs (start typing)" class="form-control">
  </div>
</div>

<hr>

<div class="row isotope-container">
  <% @docs.each do |doc| %>
  <div class="col-md-12 isotope-item">
    <div class="panel panel-default">
      <div class="panel-heading">
      <a href="/docs/<%= doc.id %>"><h3 class="panel-title"><%= doc.title %></h3></a>
      </div>
      <div class="panel-body">

        <div>
          <div class="col-md-3">
            <dl>
              <dt>Kind</dt>
              <dd><%= doc.kind %></dd>
            </dl>
          </div>
          <div class="col-md-3">
            <dl>
              <dt>Avg rating</dt>
              <dd><%= doc.avg_rating %></dd>
            </dl>
          </div>
          <div>
            <dl class="col-md-3">
              <dt>User</dt>
              <dd><%= doc.user.email %></dd>
            </dl>
          </div>
          <div class="col-md-3">
            <dl>
              <dt>Download</dt>
              <dd><a href="<%= doc.url %>">Click Here</a></dd>
            </dl>
          </div>
        </div>
        <dl>
          <div class="col-md-12">
            <dt>Description</dt>
            <dd><%= doc.description %></dd>
          </div>
        </dl>
<!--         <div class="btn-group btn-group-justified">
          <a href="/docs/<%= doc.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </div> -->
      </div>
    </div>
  </div>
  <% end %>
</div>

<!-- You can ignore the following. It's a quick and dirty example of how to get a Pinterest-style layout with quick search. -->
<!-- JavaScript for Isotope layout and quicksearch -->
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery.imagesloaded/3.1.8/imagesloaded.pkgd.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery.isotope/2.0.0/isotope.pkgd.min.js"></script>
<script>
  $(function() {
    // quick search regex
    var qsRegex;

    // init Isotope
    var $container = $('.isotope-container');

    $container.imagesLoaded(function() {
      $container.isotope({
        itemSelector: '.isotope-item',
        layoutMode: 'masonry',
        filter: function() {
          return qsRegex ? $(this).text().match( qsRegex ) : true;
        }
      })
    });

    // use value of search field to filter
    var $quicksearch = $('#quicksearch').keyup( debounce( function() {
      qsRegex = new RegExp( $quicksearch.val(), 'gi' );
      $container.isotope();
    }, 200 ) );

  });

  // debounce so filtering doesn't happen every millisecond
  function debounce( fn, threshold ) {
    var timeout;
    return function debounced() {
      if ( timeout ) {
        clearTimeout( timeout );
      }
      function delayed() {
        fn();
        timeout = null;
      }
      timeout = setTimeout( delayed, threshold || 100 );
    }
  }
</script>

<!-- End responsive, Isotope-based layout example -->
